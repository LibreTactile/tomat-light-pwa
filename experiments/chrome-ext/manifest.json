{
  "manifest_version": 3,
  "name": "WebRTC Navigator",
  "version": "0.0.1",
  "description": "Connects to vibration interface PWA via WebRTC",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js" 
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
  "<all_urls>" 
  ]
}